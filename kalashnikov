    <script>
        // Названия разделов для навигации
        const sectionTitles = [
            "Главная",
            "Исторический контекст", 
            "Михаил Калашников",
            "Сравнение с аналогами",
            "Мировое влияние",
            "Наследие"
        ];
        
        const sections = document.querySelectorAll('.section');
        const navDots = document.getElementById('navDots');
        
        // Создаем точки навигации
        sections.forEach((section, index) => {
            const dot = document.createElement('div');
            dot.className = 'dot';
            dot.dataset.index = index;
            
            // Добавляем подсказку
            const label = document.createElement('div');
            label.className = 'dot-label';
            label.textContent = sectionTitles[index];
            dot.appendChild(label);
            
            // Клик по точке
            dot.addEventListener('click', () => {
                sections[index].scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            });
            
            navDots.appendChild(dot);
        });
        
        // Определяем активную секцию при прокрутке
        const observerOptions = {
            root: null,
            rootMargin: '-50% 0px -50% 0px',
            threshold: 0
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const index = Array.from(sections).indexOf(entry.target);
                    const dots = document.querySelectorAll('.dot');
                    
                    // Убираем активный класс со всех точек
                    dots.forEach(dot => dot.classList.remove('active'));
                    
                    // Добавляем активный класс текущей точке
                    if (dots[index]) {
                        dots[index].classList.add('active');
                    }
                }
            });
        }, observerOptions);
        
        // Наблюдаем за всеми секциями
        sections.forEach(section => {
            observer.observe(section);
        });
        
        // Автопрокрутка для первой секции
        setTimeout(() => {
            document.querySelector('.dot[data-index="0"]').classList.add('active');
        }, 100);
        
        // Плавный скролл для всех внутренних ссылок
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
